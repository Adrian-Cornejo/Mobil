<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="4dp">

    <!-- Vista de mensaje recibido -->
    <LinearLayout
        android:id="@+id/received_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"

    android:background="@drawable/bg_message_received"
    android:padding="10dp"
    android:layout_marginStart="50dp"
    android:visibility="gone">

    <TextView
        android:id="@+id/textView_received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- TextView para la fecha y hora del mensaje recibido -->
    <TextView
        android:id="@+id/textView_received_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:layout_marginTop="4dp"/>
</LinearLayout>

    <!-- Vista de mensaje enviado -->
<LinearLayout
android:id="@+id/sent_message_layout"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="start"
    android:background="@drawable/bg_message_sent"
    android:padding="10dp"
    android:layout_marginEnd="50dp"
    android:visibility="gone">

<TextView
android:id="@+id/textView_sent_message"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textColor="@android:color/black"
android:textSize="16sp" />

    <!-- TextView para la fecha y hora del mensaje enviado -->
<TextView
android:id="@+id/textView_sent_date"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textColor="@android:color/darker_gray"
android:textSize="12sp"
android:layout_marginTop="4dp"/>
    </LinearLayout>

    </LinearLayout>
