<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#137271"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIMULASCORE"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:fontFamily="@font/staatliches" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header001"
            android:scaleType="fitXY" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/student_color_primary">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Examen mejorEdu: Espa침ol"
                android:fontFamily="@font/staatliches"
                android:textSize="35sp"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="8dp"
                android:textStyle="bold" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow>
                    <TextView
                        style="@style/TableHeaderStyle"
                        android:text="Fecha " />
                    <TextView
                        style="@style/TableHeaderStyle"
                        android:text="Espa침ol" />
                    <TextView
                        style="@style/TableHeaderStyle"
                        android:text="Comprensi칩n" />

                    <TextView
                        style="@style/TableHeaderStyle"
                        android:text="Calificaci칩n" />

                </TableRow>
            </TableLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/card_background" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>
