<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/teacher_background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/teacher_background"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/staatliches"
            android:text="SIMULASCORE"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/btn_toggle_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/toolbar"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_background_menu"
            android:src="@drawable/menu" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIENVENIDO"
        android:textSize="40sp"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/staatliches" />

    <!-- Main Profile Container -->
    <RelativeLayout
        android:id="@+id/rl_profile_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_bienvenido"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background_porfile"
        android:padding="10dp">

        <!-- Inner Profile Layout to center elements -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/buho3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                android:scaleType="centerCrop" />

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JUANA ALONSO"
                android:textSize="30sp"
                android:textColor="#000"
                android:layout_below="@id/iv_profile"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/staatliches" />

            <!-- Edit Icon -->
            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_edit_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- Grid Layout for Buttons -->
    <GridLayout
        android:id="@+id/grid_layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_profile_container"
        android:layout_marginTop="50dp"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <!-- Asignar Examen MEJOREDU Button -->
        <FrameLayout
            android:id="@+id/btn_Asignar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/card_bg_morado">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/examen"
                android:scaleType="centerCrop"
                android:layout_gravity="top"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asignar Examen MEJOREDU"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/text_background_option"
                android:padding="5dp"
                android:fontFamily="@font/staatliches"
                android:gravity="center"
                android:layout_gravity="bottom" />
        </FrameLayout>

        <!-- Asignar Examen OLIMPIADA Button -->
        <FrameLayout
            android:id="@+id/btn_AsignarOlim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/card_bg_morado">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/olimpiada"
                android:scaleType="centerCrop"
                android:layout_gravity="top"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asignar Examen OLIMPIADA"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/text_background_option"
                android:padding="5dp"
                android:fontFamily="@font/staatliches"
                android:gravity="center"
                android:layout_gravity="bottom" />
        </FrameLayout>

        <!-- Acceder a Mensajería Button -->
        <FrameLayout
            android:id="@+id/btn_mensajeria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/card_bg_morado">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/mensajeria"
                android:scaleType="centerCrop"
                android:layout_gravity="top"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mensajería"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/text_background_option"
                android:padding="5dp"
                android:fontFamily="@font/staatliches"
                android:gravity="center"
                android:layout_gravity="bottom" />
        </FrameLayout>

        <!-- Ver Progreso Button -->
        <FrameLayout
            android:id="@+id/btn_ver_progreso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/card_bg_morado">

        </FrameLayout>

    </GridLayout>

</RelativeLayout>
