<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Color de la sombra -->
            <corners android:radius="16dp" /> <!-- Esquinas redondeadas de la sombra -->
            <padding android:bottom="2dp" android:right="2dp" /> <!-- TamaÃ±o de la sombra -->
        </shape>
    </item>
    <!-- Fondo -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FAF7E6" /> <!-- Color de fondo -->
            <corners android:radius="15dp" /> <!-- Esquinas redondeadas del fondo -->
        </shape>
    </item>
</layer-list>
