<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Color de fondo -->
            <corners android:radius="8dp"/> <!-- Esquinas redondeadas -->
            <stroke
                android:width="1dp"
                android:color="#B6B6B6"/> <!-- Borde del EditText -->
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/> <!-- Padding dentro del EditText -->
        </shape>
    </item>
</selector>
