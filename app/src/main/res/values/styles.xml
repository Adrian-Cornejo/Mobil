<resources>
    <!-- Otros estilos existentes -->

    <!-- Estilo personalizado para el menú -->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
        <item name="android:textColor">@color/menu_item_text_color</item>
        <item name="android:itemBackground">@drawable/menu_item_background</item>
    </style>

    <!-- Estilo personalizado para los elementos del menú -->
    <style name="CustomPopupMenuItem" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/menu_item_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/staatliches</item>
    </style>

    <!-- Estio para el imput-->

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">5dp</item>
    </style>

    <style name="TableRowStyle">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <!-- Define a style for the table headers -->
    <style name="TableHeaderStyle">
        <item name="android:background">#EFD6F8</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Define a style for the table cells -->
    <style name="TableCellStyle">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#F5DA81</item>
    </style>


</resources>
